@model IEnumerable<TravelReview.Models.Review>

@{
    ViewBag.Title = "Index";
}

<h2>Reviews</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<div class="row">
    @*//creates a thumbnail for each review snippet.*@
    @foreach (var item in Model) 
    { <div class="col-sm-6 col-md-4">
        <div class="thumbnail">

            <div class="caption">
                <h3>@Html.DisplayFor(modelItem => item.Category.CategoryTitle)</h3>
                <h4>@Html.DisplayFor(modelItem => item.ReviewTitle)</h4>
                <p>@Html.DisplayNameFor(model => model.Stars) : @Html.DisplayFor(modelItem => item.Stars)/5</p>
                <p>@Html.ActionLink("Details", "Details", new { id = item.ReviewID }, new { @class = "btn btn-primary", role = "button" })</p>
                @*<p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>*@
            </div>
        </div>
    </div>
    }

</div>




